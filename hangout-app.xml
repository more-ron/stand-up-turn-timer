<Module>
  <ModulePrefs title='Stand Up Timer'>
    <Require feature='rpc'></Require>
    <Require feature='views'></Require>
  </ModulePrefs>
  <Content type='html'>
    <![CDATA[
        <!DOCTYPE html>
        <html>
          <head>
            <link href='//cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.css' media='all' rel='stylesheet' type='text/css'>
            <link href='//ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/themes/smoothness/jquery-ui.css' media='all' rel='stylesheet' type='text/css'>
            <link href='//more-ron.github.io/stand-up-turn-timer/styles/style.css' media='all' rel='stylesheet' type='text/css'>
          </head>
          <body style='font-size:11px'>
            <div id='tabs'>
              <ul>
                <li>
                  <a href='#tabs-main'>Timer</a>
                </li>
                <li>
                  <a href='#tabs-about'>About</a>
                </li>
              </ul>
              <div id='tabs-main'>
                <p>
                  Each speaker should not take longer than
                  <input id='speaker-limit-input' type='text' value='45'>
                  seconds...
                </p>
                <p>
                  <span class='speaker-countdown-display'>...</span>
                  left.
                </p>
                <p>
                  <input class='speaker-remaining-time-reminder-button' type='button' value='Notify Remaining Time'>
                </p>
                <hr>
                <p>
                  The meeting should not be longer than
                  <input id='meeting-limit-input' type='text' value='15'>
                  minutes...
                </p>
                <p>
                  <span class='meeting-countdown-display'>...</span>
                  left
                </p>
                <p>
                  <span class='meeting-timer-display'>...</span>
                  total
                </p>
                <p>
                  <input class='reset-timer-button' type='button' value='Reset Timer'>
                </p>
                <hr>
                <input class='speaker-timer-button' type='button' value="Begin Speaker's Timer">
              </div>
              <div id='tabs-about'>
                <ul>
                  <li>
                    <a href='http://about.me/ronald.maravilla' target='_blank'>About MoreRon</a>
                  </li>
                  <li>
                    <a href='https://github.com/more-ron/stand-up-turn-timer' target='_blank'>Source</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class='speaker-progressbar' title='Time left for the current speaker.'></div>
            <div class='meeting-progressbar' title='Time left for the meeting.'></div>
            <script src='//hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.4'></script>
            <script src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'></script>
            <script src='//ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js'></script>
            <script src='//more-ron.github.io/stand-up-turn-timer/scripts/jquery.duration.js'></script>
            <script src='//more-ron.github.io/stand-up-turn-timer/scripts/stand_up_timer.js'></script>
            <script src='//more-ron.github.io/stand-up-turn-timer/scripts/main.js'></script>
          </body>
        </html>
    ]]>
  </Content>
</Module>
